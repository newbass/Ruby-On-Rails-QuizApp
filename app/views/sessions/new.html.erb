<body style="margin:0px;">

<div style="height:100px;font-size:200%;background-color:green ;width:100%;border-bottom: 1px solid black">
	<h1 style="padding-left:50px;padding-top: 40px; color:white">Login</h1>
</div>
<div style="font-size:200%;margin-top:250px;margin-left: 40%;">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
	<div>
		<div class="field" style="margin-bottom: 20px;">
			<%= label_tag :name, 'Name' %><br />
			<%= text_field_tag :name, params[:name] %><br />
		</div>
		<div class="field" style="margin-bottom: 20px;">
			<%= label_tag :password, 'Password' %><br />
			<%= password_field_tag :password, params[:password] %><br />
		</div>
	</div>
	<div>
	<%= submit_tag 'Login' %>
<% end %>
<br /><br />
</div>
	
<div>
<button class="register" onclick="newuser()">Register</button>
</div>
</body>