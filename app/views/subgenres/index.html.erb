<body style="margin:0px;">

<div style="height:100px;font-size:200%;background-color:green ;width:100%;border-bottom: 1px solid black">
<h1  style="padding-left:50px;padding-top: 40px; color:white">Subgenres</h1>
</div>

<p id="notice"><%= notice %></p>

<table style="margin-left: 100px;margin-top: 100px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genrename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subgenres.each do |subgenre| %>
      <tr>
        <td><%= subgenre.name %></td>
        <td><%= subgenre.genrename %></td>
        <td><%= link_to 'Show', subgenre %></td>
        <td><%= link_to 'Edit', edit_subgenre_path(subgenre) %></td>
        <td><%= link_to 'Destroy', subgenre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="margin-left: 100px;">
<%= link_to 'New Subgenre', new_subgenre_path %>
<%= link_to 'Back', '/admin' %>
</div>
