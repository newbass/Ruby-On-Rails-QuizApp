<body style="margin:0px;">

<div style="height:100px;font-size:200%;background-color:green ;width:100%;border-bottom: 1px solid black">
<h1  style="padding-left:50px;padding-top: 40px; color:white">Scores</h1>
</div>


<p id="notice"><%= notice %></p>

<table style="margin-left: 100px;margin-top: 100px;">
  <thead>
    <tr>
      <th>Uid</th>
      <th>Sid</th>
      <th>State</th>
      <th>Score</th>
      <th>Lifeone</th>
      <th>Lifetwo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.uid %></td>
        <td><%= score.sid %></td>
        <td><%= score.state %></td>
        <td><%= score.score %></td>
        <td><%= score.lifeone %></td>
        <td><%= score.lifetwo %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

